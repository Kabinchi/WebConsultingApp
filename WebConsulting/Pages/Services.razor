                {
                    <a href="/Registration" class="hover:text-orange-500">Регистрация</a>
                }

                @if (ShowAdminProfile)
                {
                    <a href="/pAdmin" class="hover:text-orange-500">Профиль</a>
                }

                @if (ShowUserProfile)
                {
                    <a href="/pUser" class="hover:text-orange-500">Профиль</a>
                }
            </nav>
            <div class="text-sm">
                <p>+7 (999) 999-99-99</p>
                <p>info@Reputation.ru</p>
            </div>
        </div>
    </header>

    <div class="bg-gray-50 py-4">
        <div class="container mx-auto">
            <p class="text-sm text-gray-500">
                <a href="" class="text-orange-500">Главная</a> / Услуги
            </p>
        </div>
    </div>

    <main class="py-16">
        <div class="container mx-auto">
            <h1 class="text-3xl font-bold text-gray-800 mb-8">Предоставляемые услуги</h1>
            <p class="mb-12 text-gray-600">Услуги консалтинговой компании Reputation</p>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
