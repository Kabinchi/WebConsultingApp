@page "/pAdmin"
@using Microsoft.EntityFrameworkCore
@using WebConsulting.Models
@inject ConsultingDBContext DbContext
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Профиль администратора</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex-grow: 1;
        }

        .table-container {
            overflow-x: auto;
            max-width: 100%;
        }

        table {
            width: 100%;
            min-width: 800px;
        }

        th, td {
            padding: 0.5rem;
            text-align: left;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
        }

        .filter-dropdown {
            position: relative;
            display: inline-block;
        }

        .filter-dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            padding: 12px;
            border-radius: 4px;
        }

        .filter-dropdown:hover .filter-dropdown-content {
            display: block;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
            min-width: 150px;
        }

            .action-buttons button {
                width: 100%;
            }
    </style>
</head>

<body class="bg-gray-100 text-gray-800">
    <nav class="bg-gray-800 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-xl font-bold">Панель Администратора</h1>
            <div>
                <button @onclick="HandleLogout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                    Выйти
                </button>
            </div>
        </div>
    </nav>

    <main class="container mx-auto py-8 px-4 lg:px-16 min-h-[calc(95%-64px)]">
        <div class="flex flex-col md:flex-row mt-8">
            <div class="w-full md:w-1/4 p-4 bg-gray-200 mb-4 md:mb-0">
                <button class="w-full py-2 mb-4 rounded @GetTabClass(activeTab == 0)"
                        @onclick="() => ShowTab(0)">
                    Просмотр заявок
                </button>
                <button class="w-full py-2 mb-4 rounded @GetTabClass(activeTab == 1)"
                        @onclick="() => ShowTab(1)">
                    Архив заявок
                </button>
                <button class="w-full py-2 rounded @GetTabClass(activeTab == 2)"
                        @onclick="() => ShowTab(2)">
                    Профиль
                </button>
            </div>

            <div class="w-full md:w-3/4 p-4 bg-white rounded-lg shadow-md">
                @if (activeTab == 0) // Активные заявки
                {
                    <div>
                        <h2 class="text-xl font-bold text-gray-800 mb-4">Все заявки</h2>

                        <div class="mb-4 flex flex-col md:flex-row gap-4">
                            <div class="flex-grow">
                                <input type="text" class="w-full p-2 border border-gray-300 rounded"
                                       placeholder="Поиск..." @bind="searchText" @bind:event="oninput" />
                            </div>
                            <div>
                                <select class="p-2 border border-gray-300 rounded" @bind="searchColumn">
                                    <option value="">Все столбцы</option>
                                    <option value="FullName">Имя пользователя</option>
                                    <option value="PhoneNumber">Телефон</option>
                                    <option value="Email">Почта</option>
                                    <option value="CompanyName">Компания</option>
                                    <option value="CompanyAddress">Адрес</option>
                                    <option value="Description">Описание</option>
                                    <option value="Service.Name">Услуга</option>
                                    <option value="CreatedAt">Дата</option>
                                    <option value="Status">Статус</option>
                                </select>
                            </div>
                            <div>
                                <select class="p-2 border border-gray-300 rounded" @bind="statusFilter">
                                    <option value="">Все статусы</option>
                                    <option value="В ожидании">В ожидании</option>
                                    <option value="Ожидайте звонок">Ожидайте звонок</option>
                                    <option value="Выполнено">Выполнено</option>
                                </select>
                            </div>
                            <button @onclick="ApplyFilters" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                                Применить
                            </button>
                            <button @onclick="ResetFilters" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
                                Сбросить
                            </button>
                        </div>

                        @if (applications == null || applications.Count == 0)
                        {
                            <p class="text-gray-600">Нет активных заявок.</p>
                        }
                        else
                        {
                            <div class="table-container">
                                <table class="table-auto bg-white">
                                    <thead class="bg-gray-200">
                                        <tr>
                                            <th class="px-2 py-2 text-sm">Имя</th>
                                            <th class="px-2 py-2 text-sm">Телефон</th>
                                            <th class="px-2 py-2 text-sm">Почта</th>
                                            <th class="px-2 py-2 text-sm">Компания</th>
                                            <th class="px-2 py-2 text-sm">Адрес</th>
                                            <th class="px-2 py-2 text-sm">Услуга</th>
                                            <th class="px-2 py-2 text-sm">Дата</th>
                                            <th class="px-2 py-2 text-sm">Статус</th>
                                            <th class="px-2 py-2 text-sm">Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (filteredApplications != null && filteredApplications.Any())
                                        {
                                            @foreach (var app in filteredApplications.Where(a => !a.IsDeleted))
                                            {
                                                var userInfo = app.User;
                                                <tr class="border-t">
                                                    <td class="px-2 py-2 text-sm">@userInfo.FullName</td>
                                                    <td class="px-2 py-2 text-sm">@FormatPhoneNumber(userInfo.PhoneNumber)</td>
                                                    <td class="px-2 py-2 text-sm">@userInfo.Email</td>
                                                    <td class="px-2 py-2 text-sm">@app.CompanyName</td>
                                                    <td class="px-2 py-2 text-sm">@app.CompanyAddress</td>
                                                    <td class="px-2 py-2 text-sm">@app.Service?.Name</td>
                                                    <td class="px-2 py-2 text-sm">@app.CreatedAt.ToString("dd.MM.yyyy")</td>
                                                    <td class="px-2 py-2 text-sm @GetStatusClass(app.Status)">@app.Status</td>
                                                    <td class="px-2 py-2 text-sm">
                                                        <div class="action-buttons">
                                                            <select @bind="app.Status" class="border px-2 py-1 rounded text-sm">
                                                                <option value="В ожидании" selected="@IsStatusSelected(app.Status, "В ожидании")">В ожидании</option>
                                                                <option value="Ожидайте звонок" selected="@IsStatusSelected(app.Status, "Ожидайте звонок")">Ожидайте звонок</option>
                                                                <option value="Выполнено" selected="@IsStatusSelected(app.Status, "Выполнено")">Выполнено</option>
                                                            </select>
                                                            <button @onclick="() => SaveStatus(app)" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 text-sm">
                                                                Сохранить
                                                            </button>
                                                            <button @onclick="() => ShowCancelDialog(app)" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 text-sm">
                                                                Отменить
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                }
                else if (activeTab == 1) // Архив заявок
                {
                    <div>
                        <h2 class="text-xl font-bold text-gray-800 mb-4">Архив заявок</h2>

                        <div class="mb-4 flex flex-col md:flex-row gap-4">
                            <div class="flex-grow">
                                <input type="text" class="w-full p-2 border border-gray-300 rounded"
                                       placeholder="Поиск..." @bind="archiveSearchText" @bind:event="oninput" />
                            </div>
                            <div>
                                <select class="p-2 border border-gray-300 rounded" @bind="archiveSearchColumn">
                                    <option value="">Все столбцы</option>
                                    <option value="FullName">Имя пользователя</option>
                                    <option value="PhoneNumber">Телефон</option>
                                    <option value="CompanyName">Компания</option>
                                    <option value="DeletedBy">Кто отменил</option>
                                </select>
                            </div>
                            <button @onclick="ApplyArchiveFilters" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                                Поиск
                            </button>
                            <button @onclick="ResetArchiveFilters" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
                                Сбросить
                            </button>
                        </div>

                        @if (archivedApplications == null || archivedApplications.Count == 0)
                        {
                            <p class="text-gray-600">Нет заявок в архиве.</p>
                        }
                        else
                        {
                            <div class="table-container">
                                <table class="table-auto bg-white">
                                    <thead class="bg-gray-200">
                                        <tr>
                                            <th class="px-2 py-2 text-sm">Имя</th>
                                            <th class="px-2 py-2 text-sm">Телефон</th>
                                            <th class="px-2 py-2 text-sm">Компания</th>
                                            <th class="px-2 py-2 text-sm">Услуга</th>
                                            <th class="px-2 py-2 text-sm">Дата создания</th>
                                            <th class="px-2 py-2 text-sm">Дата отмены</th>
                                            <th class="px-2 py-2 text-sm">Кто отменил</th>
                                            <th class="px-2 py-2 text-sm">Причина</th>
                                            <th class="px-2 py-2 text-sm">Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var app in filteredArchivedApplications)
                                        {
                                            <tr class="border-t">
                                                <td class="px-2 py-2 text-sm">@app.User?.FullName</td>
                                                <td class="px-2 py-2 text-sm">@FormatPhoneNumber(app.User?.PhoneNumber)</td>
                                                <td class="px-2 py-2 text-sm">@app.CompanyName</td>
                                                <td class="px-2 py-2 text-sm">@app.Service?.Name</td>
                                                <td class="px-2 py-2 text-sm">@app.CreatedAt.ToString("dd.MM.yyyy")</td>
                                                <td class="px-2 py-2 text-sm">@app.DeletedAt?.ToString("dd.MM.yyyy")</td>
                                                <td class="px-2 py-2 text-sm">@app.DeletedBy</td>
                                                <td class="px-2 py-2 text-sm">@app.DeleteReason</td>
                                                <td class="px-2 py-2 text-sm">
                                                    <button @onclick="() => RestoreApplication(app)" class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 text-sm">
                                                        Восстановить
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                }
                else if (activeTab == 2) // Профиль
                {
                    <div class="bg-white p-6 rounded-lg">
                        <h2 class="text-xl font-bold text-gray-800 mb-4">Профиль администратора</h2>
                        <div class="mb-4">
                            <label for="fullName" class="block text-sm font-medium text-gray-700">Имя</label>
                            <input type="text" id="fullName" class="mt-1 block w-full p-2 border border-gray-300 rounded"
                                   @bind="user.FullName" @bind:event="oninput" disabled="@isFullNameDisabled" />
                            <button @onclick="ToggleFullNameEdit" class="text-blue-500 mt-2 text-sm">
                                @if (isFullNameDisabled)
                                {
                                    <span>Редактировать</span>
                                }
                                else
                                {
                                    <span>Отменить</span>
                                }
                            </button>
                        </div>

                        <div class="mb-4">
                            <label for="phone" class="block text-sm font-medium text-gray-700">Телефон</label>
                            @if (isPhoneDisabled)
                            {
                                <div class="mt-1 block w-full p-2 border border-gray-300 rounded bg-gray-100">
                                    @FormatPhoneNumber(user.PhoneNumber)
                                </div>
                            }
                            else
                            {
                                <input type="text" id="phone" class="mt-1 block w-full p-2 border border-gray-300 rounded"
                                       value="@user.PhoneNumber"
                                       @oninput="HandlePhoneInput" />
                            }
                            <button @onclick="TogglePhoneEdit" class="text-blue-500 mt-2 text-sm">
                                @if (isPhoneDisabled)
                                {
                                    <span>Редактировать</span>
                                }
                                else
                                {
                                    <span>Отменить</span>
                                }
                            </button>
                            @if (!string.IsNullOrEmpty(phoneError))
                            {
                                <p class="text-red-500 text-sm mt-1">@phoneError</p>
                            }
                        </div>

                        <div class="mb-4">
                            <label for="email" class="block text-sm font-medium text-gray-700">Почта</label>
                            <input type="email" id="email" class="mt-1 block w-full p-2 border border-gray-300 rounded"
                                   @bind="user.Email" disabled />
                        </div>

                        @if (!isFullNameDisabled || !isPhoneDisabled)
                        {
                            <button @onclick="SaveChanges" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                                Сохранить изменения
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </main>

    @if (showCancelDialog)
    {
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
            <div class="bg-white p-6 rounded-lg max-w-md w-full">
                <h3 class="text-lg font-bold mb-4">Отмена заявки</h3>
                <textarea @bind="cancelReason" class="w-full p-2 border rounded mb-4"
                          placeholder="Укажите причину отмены" rows="4"></textarea>
                <div class="flex justify-end gap-2">
                    <button @onclick="CloseCancelDialog" class="px-4 py-2 border rounded">Назад</button>
                    <button @onclick="ConfirmCancel" class="bg-red-500 text-white px-4 py-2 rounded">
                        Подтвердить отмену
                    </button>
                </div>
            </div>
        </div>
    }
</body>

</html>

@code {
    private int activeTab = 0;
    private bool isFullNameDisabled = true;
    private bool isPhoneDisabled = true;
    private List<Application> applications = new();
    private List<Application> filteredApplications = new();
    private List<Application> archivedApplications = new();
    private List<Application> filteredArchivedApplications = new();
    private List<Service> services = new();
    private User user = new();
    private string phoneError = string.Empty;
    private bool showCancelDialog = false;
    private Application applicationToCancel;
    private string cancelReason = string.Empty;

    // Фильтры для активных заявок
    private string searchText = "";
    private string searchColumn = "";
    private string statusFilter = "";
    private string nameFilter = "";
    private string companyFilter = "";
    private int serviceFilter = 0;

    // Фильтры для архива
    private string archiveSearchText = "";
    private string archiveSearchColumn = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            user = await DbContext.Users.FirstOrDefaultAsync(u => u.Role == "Admin") ?? new User();
            services = await DbContext.Services.ToListAsync();
            await LoadApplications();
            await LoadArchivedApplications();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при загрузке данных: {ex.Message}");
        }
    }

    private async Task LoadApplications()
    {
        applications = await DbContext.Applications
            .Include(a => a.User)
            .Include(a => a.Service)
            .Where(a => !a.IsDeleted)
            .ToListAsync();
        filteredApplications = applications;
    }

    private async Task LoadArchivedApplications()
    {
        archivedApplications = await DbContext.Applications
            .Include(a => a.User)
            .Include(a => a.Service)
            .Where(a => a.IsDeleted)
            .ToListAsync();
        filteredArchivedApplications = archivedApplications;
    }

    private void ShowTab(int tabIndex)
    {
        activeTab = tabIndex;
        if (tabIndex == 0) ApplyFilters();
        else if (tabIndex == 1) ApplyArchiveFilters();
    }

    private void ApplyFilters()
    {
        try
        {
            var query = applications.AsQueryable();

            if (!string.IsNullOrEmpty(nameFilter))
            {
                query = query.Where(a => a.User.FullName != null &&
                   a.User.FullName.Contains(nameFilter, StringComparison.OrdinalIgnoreCase));
            }

            if (!string.IsNullOrEmpty(companyFilter))
            {
                query = query.Where(a => a.CompanyName != null &&
                   a.CompanyName.Contains(companyFilter, StringComparison.OrdinalIgnoreCase));
            }

            if (serviceFilter > 0)
            {
                query = query.Where(a => a.Service != null && a.Service.Id == serviceFilter);
            }

            if (!string.IsNullOrEmpty(statusFilter))
            {
                query = query.Where(a => a.Status == statusFilter);
            }

            if (!string.IsNullOrEmpty(searchText))
            {
                if (string.IsNullOrEmpty(searchColumn))
                {
                    query = query.Where(a =>
                        (a.User.FullName != null && a.User.FullName.Contains(searchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.User.PhoneNumber != null && a.User.PhoneNumber.Contains(searchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.User.Email != null && a.User.Email.Contains(searchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.CompanyName != null && a.CompanyName.Contains(searchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.CompanyAddress != null && a.CompanyAddress.Contains(searchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.Description != null && a.Description.Contains(searchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.Service != null && a.Service.Name != null &&
                         a.Service.Name.Contains(searchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.CreatedAt.ToString("dd.MM.yyyy").Contains(searchText)) ||
                        (a.Status != null && a.Status.Contains(searchText, StringComparison.OrdinalIgnoreCase)));
                }
                else
                {
                    query = searchColumn switch
                    {
                        "FullName" => query.Where(a => a.User.FullName != null &&
                                  a.User.FullName.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        "PhoneNumber" => query.Where(a => a.User.PhoneNumber != null &&
                                  a.User.PhoneNumber.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        "Email" => query.Where(a => a.User.Email != null &&
                                  a.User.Email.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        "CompanyName" => query.Where(a => a.CompanyName != null &&
                                  a.CompanyName.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        "CompanyAddress" => query.Where(a => a.CompanyAddress != null &&
                                  a.CompanyAddress.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        "Description" => query.Where(a => a.Description != null &&
                                  a.Description.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        "Service.Name" => query.Where(a => a.Service != null && a.Service.Name != null &&
                                  a.Service.Name.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        "CreatedAt" => query.Where(a => a.CreatedAt.ToString("dd.MM.yyyy").Contains(searchText)),
                        "Status" => query.Where(a => a.Status != null &&
                                  a.Status.Contains(searchText, StringComparison.OrdinalIgnoreCase)),
                        _ => query
                    };
                }
            }

            filteredApplications = query.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при фильтрации: {ex.Message}");
            filteredApplications = applications;
        }
    }

    private void ApplyArchiveFilters()
    {
        try
        {
            var query = archivedApplications.AsQueryable();

            if (!string.IsNullOrEmpty(archiveSearchText))
            {
                if (string.IsNullOrEmpty(archiveSearchColumn))
                {
                    query = query.Where(a =>
                        (a.User.FullName != null && a.User.FullName.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.User.PhoneNumber != null && a.User.PhoneNumber.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.CompanyName != null && a.CompanyName.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)) ||
                        (a.DeletedBy != null && a.DeletedBy.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)));
                }
                else
                {
                    query = archiveSearchColumn switch
                    {
                        "FullName" => query.Where(a => a.User.FullName != null &&
                                  a.User.FullName.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)),
                        "PhoneNumber" => query.Where(a => a.User.PhoneNumber != null &&
                                  a.User.PhoneNumber.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)),
                        "CompanyName" => query.Where(a => a.CompanyName != null &&
                                  a.CompanyName.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)),
                        "DeletedBy" => query.Where(a => a.DeletedBy != null &&
                                  a.DeletedBy.Contains(archiveSearchText, StringComparison.OrdinalIgnoreCase)),
                        _ => query
                    };
                }
            }

            filteredArchivedApplications = query.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при фильтрации архива: {ex.Message}");
            filteredArchivedApplications = archivedApplications;
        }
    }

    private void ResetFilters()
    {
        searchText = "";
        searchColumn = "";
        statusFilter = "";
        nameFilter = "";
        companyFilter = "";
        serviceFilter = 0;
        ApplyFilters();
    }

    private void ResetArchiveFilters()
    {
        archiveSearchText = "";
        archiveSearchColumn = "";
        ApplyArchiveFilters();
    }

    private void ShowCancelDialog(Application app)
    {
        applicationToCancel = app;
        showCancelDialog = true;
    }

    private void CloseCancelDialog()
    {
        showCancelDialog = false;
        cancelReason = string.Empty;
    }

    private async Task ConfirmCancel()
    {
        if (applicationToCancel != null && !string.IsNullOrWhiteSpace(cancelReason))
        {
            applicationToCancel.IsDeleted = true;
            applicationToCancel.DeletedAt = DateTime.Now;
            applicationToCancel.DeleteReason = cancelReason;
            applicationToCancel.DeletedBy = "admin";
            applicationToCancel.Status = "Отказано"; // Устанавливаем статус "Отказано" при отмене

            try
            {
                DbContext.Applications.Update(applicationToCancel);
                await DbContext.SaveChangesAsync();
                await LoadApplications();
                await LoadArchivedApplications();
                CloseCancelDialog();
                await JSRuntime.InvokeVoidAsync("alert", "Заявка успешно отменена");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
            }
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("alert", "Пожалуйста, укажите причину отмены");
        }
    }

    private async Task RestoreApplication(Application app)
    {
        app.IsDeleted = false;
        app.DeletedAt = null;
        app.DeleteReason = null;
        app.DeletedBy = null;
        app.Status = "В ожидании"; // Устанавливаем статус "В ожидании" при восстановлении

        try
        {
            DbContext.Applications.Update(app);
            await DbContext.SaveChangesAsync();
            await LoadApplications();
            await LoadArchivedApplications();
            await JSRuntime.InvokeVoidAsync("alert", "Заявка успешно восстановлена");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Ошибка: {ex.Message}");
        }
    }

    private string FormatPhoneNumber(string phone)
    {
        if (string.IsNullOrEmpty(phone)) return string.Empty;
        var digits = new string(phone.Where(char.IsDigit).ToArray());
        if (digits.Length > 0 && digits[0] == '8') digits = '7' + digits[1..];
        return digits.Length switch
        {
            11 => $"+7({digits[1..4]}){digits[4..7]}-{digits[7..9]}-{digits[9..]}",
            _ => phone
        };
    }

    private void HandlePhoneInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? string.Empty;
        var digits = new string(input.Where(char.IsDigit).ToArray());
        if (digits.Length > 0 && digits[0] == '8') digits = '7' + digits[1..];
        user.PhoneNumber = digits;
        ValidatePhoneNumber(digits);
    }

    private void ValidatePhoneNumber(string digits)
    {
        phoneError = (digits.Length == 11 && (digits.StartsWith("7") || digits.StartsWith("8")))
            ? string.Empty
            : "Номер телефона должен содержать 11 цифр и начинаться с 7 или 8";
    }

