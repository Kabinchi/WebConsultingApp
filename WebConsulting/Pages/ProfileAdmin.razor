        }

        try
        {
            var random = new Random();
            generatedPasswordChangeCode = random.Next(100000, 999999).ToString();

            var success = await EmailService.SendConfirmationCodeAsync(changePasswordEmail, generatedPasswordChangeCode);

            if (success)
            {
                codeSent = true;
                changePasswordError = "";
            }
            else
